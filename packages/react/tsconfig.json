{
    "compilerOptions": {
        "outDir": "lib",
        "module": "esnext",
        "lib": ["DOM", "ESNext"],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
}